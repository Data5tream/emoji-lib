<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/emojicons_google_keyboard_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/emojis_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/emojis_tab_0_recents"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:padding="@dimen/tab_padding"
            android:scaleType="center"
            android:src="@drawable/ic_emoji_recent_light_activated" />

        <ImageButton
            android:id="@+id/emojis_tab_1_people"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:padding="@dimen/tab_padding"
            android:scaleType="center"
            android:src="@drawable/ic_emoji_people_light_activated" />

        <ImageButton
            android:id="@+id/emojis_tab_2_nature"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/ic_emoji_nature_light_activated" />

        <ImageButton
            android:id="@+id/emojis_tab_3_objects"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/ic_emoji_objects_light_activated" />

        <ImageButton
            android:id="@+id/emojis_tab_4_cars"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/ic_emoji_places_light_activated" />

        <ImageButton
            android:id="@+id/emojis_tab_5_punctuation"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/ic_emoji_symbols_light_activated" />

        <ImageButton
            android:id="@+id/emojis_backspace"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/sym_keyboard_delete_holo_dark" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/emojicons_google_keyboard_item_tertiary" />

    <android.support.v4.view.ViewPager
        android:id="@+id/emojis_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
